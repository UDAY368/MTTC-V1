# Database Configuration (Option 1: Use separate variables)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meditation_quiz_db
DB_USER=postgres
DB_PASSWORD=your_password

# Database Configuration (Option 2: Use direct DATABASE_URL)
# DATABASE_URL="postgresql://username:password@localhost:5432/meditation_quiz_db?schema=public"
# Note: If DATABASE_URL is not set, it will be constructed from DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD

# JWT Secret (Change this to a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server
PORT=5000
NODE_ENV=development

# CORS: origin allowed for API requests (must match your frontend URL)
# Local: http://localhost:3000
# Production: set to your deployed frontend URL (e.g. https://your-app.vercel.app)
FRONTEND_URL="http://localhost:3000"
